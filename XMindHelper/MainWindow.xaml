                     <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />

                        <RowDefinition Height="Auto" />
                     </Grid.RowDefinitions>
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                     </Grid.ColumnDefinitions>
                     <Button Grid.Row="0" Grid.Column="0" Content="+" HorizontalAlignment="Left" Margin="4,7,0,0" VerticalAlignment="Top" Width="23" RenderTransformOrigin="1.826,0.455" Click="Button_Click"/>
                     <Button Grid.Row="0" Grid.Column="0" Content="-" HorizontalAlignment="Left" Margin="32,7,0,98" Width="23"/>
                  </Grid>
               </GroupBox>

               <GroupBox Header="CCB" VerticalAlignment="Top" Height="149" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                  <Grid>
                     <Button Content="+" HorizontalAlignment="Left" Margin="4,7,0,0" VerticalAlignment="Top" Width="23" />
                     <Button Content="-" HorizontalAlignment="Left" Margin="32,7,0,98" Width="23"/>
                  </Grid>
               </GroupBox>
               <GroupBox Header="Meassure" VerticalAlignment="Top" Height="149" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2">
                  <Grid>
                     <Button Content="+" HorizontalAlignment="Left" Margin="4,7,0,0" VerticalAlignment="Top" Width="23" />
                     <Button Content="-" HorizontalAlignment="Left" Margin="32,7,0,98" Width="23"/>
